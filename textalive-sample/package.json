{
    "name": "textalive-sample",
    "private": true,
    "version": "1.0.0",
    "description": "いろいろなtextaliveの詰め合わせ",
    "scripts": {
        "predev": "ts-node ./src/scripts/build_fft.ts",
        "dev": "parcel src/index.html --out-dir dev",
        "dev:nocache": "parcel src/index.html --out-dir dev",
        "prebuild": "ts-node ./src/scripts/build_fft.ts",
        "build": "parcel build src/index.html --public-url ./ --out-dir docs --no-source-maps",
        "clean": "del-cli .cache dev docs",
        "precommit": "lint-staged",
        "lint": "prettier --check ./src/**/*.ts ./src/*.ts",
        "lint:write": "prettier --write ./src/**/*.ts ./src/*.ts"
    },
    "keywords": [
        "textalive"
    ],
    "author": "TTIC",
    "license": "MIT",
    "dependencies": {
        "@types/node": "^16.9.6",
        "axios": "^0.21.4",
        "phaser": "^3.24.1",
        "textalive-app-api": "0.3.0",
        "ts-node": "^10.2.1"
    },
    "devDependencies": {
        "del-cli": "^4.0.1",
        "husky": "^7.0.2",
        "lint-staged": "^11.1.2",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.3.2",
        "typescript": "^4.3.5"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tsc --noEmit",
            "prettier --write ./src/**/*.ts ./src/*.ts",
            "git add"
        ]
    }
}
